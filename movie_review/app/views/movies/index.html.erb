<% if !user_signed_in? %>
  <div class="jumbtron">
  <h1>お気に入りの映画レビュー</h1>
  <p><%= link_to "会員登録をして映画のレビューを書く", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
  <% end %>
  
<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium),class: 'image'), movie %>
      </div>
    </div>
    <% end %>
</div>